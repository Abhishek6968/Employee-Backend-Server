<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>
</head>

<body>
    <div class="container">
        <h1>Employees</h1>

        <!-- Link to Add Employee form -->
        <a href="/add" class="btn btn-primary mb-3">Add New Employee</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Location</th>
                    <th>Salary</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through the employees data and display each in a table row -->
                <% if (employees && employees.length > 0) { %>
                    <% employees.forEach((employee) => { %>
                        <tr>
                            <td><%= employee.Emp_Name %></td>
                            <td><%= employee.Emp_Des %></td>
                            <td><%= employee.Emp_Loc %></td>
                            <td><%= employee.Emp_Sal %></td>

                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center">No employees found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>
